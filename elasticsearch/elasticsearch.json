["curl -XPUT 'http://localhost:9200/index'"]
// 创建索引
{
	"settings": {
		"index": {
			"number_of_shards": 5,
			"number_of_replicas": 1
		}
	},
	// 设置index中某个type下的field的细节信息
	"settings": {
		"typeName": {
			"properties": {
				"user": {
					"type": "string",
					"index": "not_analyzed"
				}
			}
		}
	}
}

["curl -XPUT 'http://localhost:9200/index/_settings'"]
// 修改索引
{
	"index": {
		"number_of_replicas": 7
	}
}

