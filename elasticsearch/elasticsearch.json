["curl -XPUT 'http://localhost:9200/index/news/_mapping/'"]
// 创建数据mapping
{
	"news": {	// 建立news的type
		"properties": {	// 下面是定义各个字段
			"content": {
				"type": "string",
				"store": "no",	// 当前字段不存储
				"analyzer": "ik",
				"search_analyzer": "ik"
			},
			"title": {
				"type": "string",
				"store": "no",
				"analyzer": "ik",
				"search_analyzer": "ik",
				"boost": 5	// 权重
			},
			"author": {
				"type": "string",
				"index": "not_analyzed"
			},
			"publish_date": {
				"type": "date",
				"format": "yyyy/mm/dd"
			},
			"category": {
				"type": "string",
				"index": "not_analyzed"
			}
		}
	}
}

