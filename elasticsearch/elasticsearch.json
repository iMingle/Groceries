["curl -XDELETE 'http://localhost:9200/index/type/_query?q=user:LiM'"]

// 简单检索
{
	"from": 18,
	"size": 30,
	"query": {
		"term": {
			"title": "中国"
		}
	}
}
// 设置不同字段的排序权重
{
	"query": {
		"multi_match": {	// 跨字段检索
			"query": "mingle",
			"fields": ["title^2", "content"]
		}
	}
}
// 通过_source参数指定返回的检索字段集
{
	"query": {
		"match_all": {}	// 查询所有内容
	},
	"_source": ["url", "taglist"]
}
// term查询仅匹配在给定字段有某个词项的文档
{
	"query": {
		"term": {
			"title": {
				"value": "中国",
				"boost": 10
			}
		}
	}
}
// terms查询某些词项的文档
{
	"query": {
		"terms": {
			"title": ["中国", "美国"],
			"minimum_match": 1	// 设置最小匹配集的大小
		}
	}
}
// match,match_all,match_phrase
{
	"query": {
		"match": {
			"name": "mingle"
		},
		"sort": {
			"lastModifyTime": {
				"order": "asc"
			}
		}
	},
	"_source": ["url", "taglist"],
	"size": 10
}
{
	"query": {
		"match": {
			"_all": "mingle"
		}
	}
}
{
	"query": {
		"match_phrase": {	// 查询词组
			"taglist": "mingle is a man"
		}
	}
}
{
	"query": {
		"match_phrase": {
			"title": {
				"query": "中国 and 美国",
				"slop": 2	// 在查询文本的词项间的间隔词数量
			}
		}
	},
	"_source": ["title"]
}
// query_string查询,支持Lucene所有的查询语法
{
	"query": {
		"query_string": {
			"query": "title:中国^2 + title:美国 - content:日本",
			"default_field": "title"	// 默认为_all
		}
	}
}
// Prefix,Range查询
{
	"query": {
		"prefix": {
			"title": {
				"value": "中华",
				"boost": 2
			}
		}
	},
	"_source": ["title"]
}
{
	"query": {
		"range": {
			"gatherTime": {
				"from": "now-2h",
				"to": "now",
				"include_lower": true,
				"include_upper": true,
				"boost": 2
			}
		}
	}
}
// more_like_this查询得到与所提供的文本相似的文档
{
	"query": {
		"more_like_this": {
			"fields": ["title", "keywords"],
			"like_text": "Prefer",
			"percent_terms_to_match": "40%",
			"min_term_freq": 1,
			"min_doc_freq": 1,
			"max_doc_freq": 1000,
			"min_word_len": 1,
			"max_word_len": 100,
			"max_query_terms": 25,
			"stop_words": ["kkk", "uuu"],
			"boost": 3

		},
		"_source": ["title"]
	}
}
// fuzzy_like_this查询得到与所提供的文本相似的所有文档,基于模糊查询
{
	"query": {
		"fuzzy_like_this": {
			"fields": ["title", "keywords"],
			"like_text": "Prefer",
			"ignore_tf": false,	// 指定忽略词项的频次,默认为false
			"max_query_terms": 25,
			"min_similarity": 0.8,	// 最小相似度
			"prefix_length": 0.2,	// 共同前缀的长度,默认是0
			"boost": 2
		},
		"_source": ["title"]
	}
}

// Filter
// 通过filtered子句将多个查询条件合并在一起
// filter子句可以很好的将数据缓存再内存中,可以大大提高下一次的检索速度
{
	"query": {
		"filtered": {
			"query": {
				"match": {
					"content": "计算机"
				}
			},
			"filter": {
				"range": {
					"time": {
						"gte": "now-6d"
					}
				}
			}
		}
	}
}
// OR Filter
{
	"query": {
		"filter": {
			"or": [
				{
					"term": {
						"content": "Computer"
					}
				},
				{
					"term": {
						"content": "Cat"
					}
				}
			]
		}
	}
}
// AND Filter
{
	"query": {
		"filter": {
			"and": [
				{
					"range": {
						"time": {
							"from": "now-6d",
							"to": "now"
						}
					}
				},
				{
					"term": {
						"content": "Cat"
					}
				}
			],
			"_cache": true
		}
	}
}
// BOOL Filter
{
	"query": {
		"filter": {
			"bool": {
				"must": {
					"term": {
						"content": "Computer"
					}
				},
				"must_not": {
					"range": {
						"time": {
							"from": "now-1d",
							"to": "now"
						}
					}
				}
			}
		}
	}
}
// Exists & Missing Filter
{
	"query": {
		"filter": {
			"exists": {
				"field": "content"
			}
		}
	}
}
{
	"query": {
		"filter": {
			"missing": {
				"field": "taglist",
				"null_value": []
			}
		}
	}
}
// Type Filter
{
	"query": {
		"type": {
			"value": "pages"
		}
	}
}
// Match_all Filter
{
	"query": {
		"filter": {
			"match_all": {}
		}
	}
}
// Not Filter
{
	"query": {
		"filter": {
			"not": {
				"range": {
					"time": {
						"from": "now-1d",
						"to": "now"
					}
				}
			}
		}
	}
}
// Query Filter
{
	"query": {
		"filter": {
			"query": {
				"query_string": {
					"query": "中国 and 美国"
				}
			}
		}
	}
}
// 复合查询
{
	"query": {
		"filter": {
			"bool": {
				"must": {
					"match": {
						"content": "Computer"
					},
					"match": {
						"content": "Cat"
					}
				},
				"must_not": {
					"match": {
						"content": "Computer1"
					},
					"match": {
						"content": "Cat1"
					}
				}
			}
		}
	}
}
// 结果排序
{
	"query": {
		"terms": {
			"title": ["中国", "日本"],
			"minimum_match": 3
		}
	},
	"sort": [
		{
			"_score": "desc",
			"missing": "_last"	// 对于无值的,放在最后显示
		}
	]
}