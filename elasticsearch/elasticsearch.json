["curl -XPOST 'http://localhost:9200/index/news/_search/'"]
// 构建检索表达式
{
	"from": 0,
	"size": 10,
	"fields": ["title", "content", "publish_date", "category", "author"],	// 指定检索结果document集合中含有那些域
	"sort": [{
			"publish_date": {
				"order": "asc"
			}
		},
		"_score"
	],
	"query": {
		"bool": {	// 构建布尔查询
			"should": [{
				"term": {
					"title": "中国"
				}
			}, {
				"term": {
					"content": "中国"
				}
			}]
		}
	},
	"filter": {	// 创建过滤规则
		"range": {
			"publish_date": {
				"from": "2015/01/01",
				"to": "2016/01/01",
				"include_lower": true,
				"include_upper": false
			}
		}
	},
	"highlight": {	// 高亮
		"pre_tags": ["<tag1>", "<tag2>"],
		"post_tags": ["</tag1>", "</tag2>"],
		"fields": {	// 需高亮的域
			"title": {},
			"content": {}
		}
	},
	"facets": {
		"cate": {
			"terms": {
				"field": "category"
			}
		}
	}
}

